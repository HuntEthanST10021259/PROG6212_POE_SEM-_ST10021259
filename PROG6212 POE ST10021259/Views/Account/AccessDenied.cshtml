@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow">
                <div class="card-body">
                    <i class="bi bi-shield-x text-danger" style="font-size: 5rem;"></i>
                    <h2 class="mt-3">Access Denied</h2>
                    <p class="text-muted">You don't have permission to access this page.</p>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Login with Different Account
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>