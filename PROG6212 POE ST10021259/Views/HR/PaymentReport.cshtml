@model PROG6212_POE_ST10021259.Models.PaymentReportViewModel
@{
    ViewData["Title"] = "Payment Report";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-file-bar-graph"></i> Payment Report</h2>
        <button onclick="window.print()" class="btn btn-primary">
            <i class="bi bi-printer"></i> Print Report
        </button>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Report Summary</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <p><strong>Generated:</strong> @Model.GeneratedDate.ToString("dd MMMM yyyy HH:mm")</p>
                </div>
                <div class="col-md-4">
                    <p><strong>Total Claims:</strong> @Model.TotalClaims</p>
                </div>
                <div class="col-md-4">
                    <p><strong>Total Amount:</strong> <span class="text-success fs-4">R @Model.TotalAmount.ToString("F2")</span></p>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">Approved Claims Detail</h5>
        </div>
        <div class="card-body">
            @if (!Model.Claims.Any())
            {
                <div class="alert alert-info">No approved claims for this report.</div>
            }
            else
            {
                <table class="table table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Claim ID</th>
                            <th>Date Submitted</th>
                            <th>Date Approved</th>
                            <th>Hours Worked</th>
                            <th>Hourly Rate</th>
                            <th>Total Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in Model.Claims.OrderBy(c => c.ManagerApprovedDate))
                        {
                            <tr>
                                <td>#@claim.Id</td>
                                <td>@claim.DateSubmitted.ToString("dd/MM/yyyy")</td>
                                <td>@claim.ManagerApprovedDate?.ToString("dd/MM/yyyy")</td>
                                <td>@claim.HoursWorked</td>
                                <td>R @claim.HourlyRate.ToString("F2")</td>
                                <td>R @claim.TotalAmount.ToString("F2")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-success">
                        <tr>
                            <td colspan="5" class="text-end"><strong>TOTAL PAYABLE:</strong></td>
                            <td><strong>R @Model.TotalAmount.ToString("F2")</strong></td>
                        </tr>
                    </tfoot>
                </table>
            }
        </div>
    </div>

    <div class="mt-3 no-print">
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

<style>
    @@media print {
        .no-print, .btn {
            display: none;
        }

        .card {
            border: 1px solid #000;
        }
    }
</style>