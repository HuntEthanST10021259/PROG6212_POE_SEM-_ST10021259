@model PROG6212_POE_ST10021259.Models.Claim
@{
    ViewData["Title"] = "Submit Monthly Claim";
}

<div class="container mt-4">
    <h2 class="mb-4">Submit Monthly Claim</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <form asp-controller="Lecturer" asp-action="SubmitClaim" method="post" enctype="multipart/form-data" class="card p-4 shadow-sm" id="claimForm">
                <div class="mb-3">
                    <label asp-for="HoursWorked" class="form-label"></label>
                    <input asp-for="HoursWorked" class="form-control" id="hoursWorked" placeholder="Enter hours worked" type="number" step="0.01" />
                    <span asp-validation-for="HoursWorked" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="HourlyRate" class="form-label"></label>
                    <input asp-for="HourlyRate" class="form-control" id="hourlyRate" placeholder="Enter hourly rate" type="number" step="0.01" />
                    <span asp-validation-for="HourlyRate" class="text-danger"></span>
                </div>

                <!-- Auto-calculated Total Amount Display -->
                <div class="mb-3">
                    <div class="card bg-light border-success">
                        <div class="card-body">
                            <h5 class="card-title text-success">Calculated Total Amount</h5>
                            <h2 class="text-success" id="totalAmount">R 0.00</h2>
                            <small class="text-muted">This amount is automatically calculated based on hours worked × hourly rate</small>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Notes" class="form-label"></label>
                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Enter any additional notes (optional)..."></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Upload Supporting Documents (Optional)</label>
                    <input type="file" name="supportingDocument" id="supportingDocument" class="form-control" accept=".pdf,.doc,.docx,.xlsx" />
                    <div class="form-text">Accepted formats: PDF, DOC, DOCX, XLSX (Max 10MB)</div>
                    <div id="fileError" class="text-danger mt-2" style="display:none;"></div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success btn-lg" id="submitBtn">
                        <i class="bi bi-check-circle"></i> Submit Claim
                    </button>
                    <a asp-action="TrackStatus" class="btn btn-outline-secondary">
                        View My Claims
                    </a>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card bg-light mb-3">
                <div class="card-body">
                    <h5 class="card-title">Submission Guidelines</h5>
                    <ul class="small">
                        <li>Enter the total hours worked for the month</li>
                        <li>Specify your hourly rate in Rands (R)</li>
                        <li>Total amount will be calculated automatically</li>
                        <li>Upload supporting documents if available</li>
                        <li>Your claim will be reviewed by coordinator then manager</li>
                        <li>Track your claim status anytime</li>
                    </ul>
                </div>
            </div>

            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Approval Process</h5>
                    <ol class="small mb-0">
                        <li>Submit your claim</li>
                        <li>Program Coordinator reviews</li>
                        <li>Manager gives final approval</li>
                        <li>Payment processed</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Auto-calculation functionality with jQuery
        $(document).ready(function() {
            // Function to calculate and display total
            function calculateTotal() {
                var hours = parseFloat($('#hoursWorked').val()) || 0;
                var rate = parseFloat($('#hourlyRate').val()) || 0;
                var total = hours * rate;

                $('#totalAmount').text('R ' + total.toFixed(2));

                // Validation feedback
                if (hours > 0 && rate > 0) {
                    $('#totalAmount').removeClass('text-danger').addClass('text-success');
                } else {
                    $('#totalAmount').removeClass('text-success').addClass('text-muted');
                }
            }

            // Attach event listeners for real-time calculation
            $('#hoursWorked, #hourlyRate').on('input change', function() {
                calculateTotal();
            });

            // File validation
            $('#supportingDocument').on('change', function() {
                var file = this.files[0];
                var maxSize = 10 * 1024 * 1024; // 10MB
                var allowedExtensions = ['.pdf', '.doc', '.docx', '.xlsx'];

                $('#fileError').hide();

                if (file) {
                    // Check file size
                    if (file.size > maxSize) {
                        $('#fileError').text('File size exceeds 10MB limit.').show();
                        this.value = '';
                        return;
                    }

                    // Check file extension
                    var fileName = file.name.toLowerCase();
                    var isValidExtension = allowedExtensions.some(function(ext) {
                        return fileName.endsWith(ext);
                    });

                    if (!isValidExtension) {
                        $('#fileError').text('Only PDF, DOC, DOCX, and XLSX files are allowed.').show();
                        this.value = '';
                        return;
                    }
                }
            });

            // Form validation before submit
            $('#claimForm').on('submit', function(e) {
                var hours = parseFloat($('#hoursWorked').val());
                var rate = parseFloat($('#hourlyRate').val());

                if (isNaN(hours) || hours <= 0 || hours > 744) {
                    alert('Please enter valid hours worked (0.01 - 744)');
                    e.preventDefault();
                    return false;
                }

                if (isNaN(rate) || rate <= 0 || rate > 10000) {
                    alert('Please enter valid hourly rate (0.01 - 10000)');
                    e.preventDefault();
                    return false;
                }

                // Disable submit button to prevent double submission
                $('#submitBtn').prop('disabled', true).text('Submitting...');

                return true;
            });

            // Initial calculation on page load
            calculateTotal();
        });
    </script>
}