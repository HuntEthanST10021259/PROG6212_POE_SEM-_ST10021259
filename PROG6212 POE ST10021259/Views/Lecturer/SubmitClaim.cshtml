@model PROG6212_POE_ST10021259.Models.Claim
@{
    ViewData["Title"] = "Submit Monthly Claim";
}

<div class="container mt-4">
    <h2 class="mb-4">Submit Monthly Claim</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <form asp-controller="Lecturer" asp-action="SubmitClaim" method="post" enctype="multipart/form-data" class="card p-4 shadow-sm" id="claimForm">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="HoursWorked" class="form-label"></label>
                    <input asp-for="HoursWorked" class="form-control" id="hoursWorked" placeholder="Enter hours worked" type="number" step="0.01" min="0.01" max="744" />
                    <span asp-validation-for="HoursWorked" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="HourlyRate" class="form-label"></label>
                    <input asp-for="HourlyRate" class="form-control" id="hourlyRate" placeholder="Enter hourly rate" type="number" step="0.01" min="0.01" />
                    <span asp-validation-for="HourlyRate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Calculated Total Amount</label>
                    <div class="input-group">
                        <span class="input-group-text">R</span>
                        <input type="text" class="form-control bg-light" id="totalAmount" readonly value="0.00" style="font-size: 1.25rem; font-weight: bold;">
                    </div>
                    <small class="text-muted">Automatically calculated (Hours × Rate)</small>
                </div>

                <div class="mb-3">
                    <label asp-for="Notes" class="form-label"></label>
                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Enter any additional notes (optional)..."></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Upload Supporting Documents (Optional)</label>
                    <input type="file" name="supportingDocument" class="form-control" id="fileInput" accept=".pdf,.doc,.docx,.xlsx" />
                    <div class="form-text">Accepted formats: PDF, DOC, DOCX, XLSX (Max 10MB)</div>
                    <div id="fileValidation" class="text-danger mt-1" style="display: none;"></div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success btn-lg" id="submitBtn">
                        <i class="bi bi-check-circle"></i> Submit Claim
                    </button>
                    <a asp-action="TrackStatus" class="btn btn-outline-secondary">
                        View My Claims
                    </a>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card bg-light mb-3">
                <div class="card-body">
                    <h5 class="card-title">Submission Guidelines</h5>
                    <ul class="small">
                        <li>Enter the total hours worked for the month</li>
                        <li>Specify your hourly rate in Rands (R)</li>
                        <li>Total amount is automatically calculated</li>
                        <li>Upload supporting documents if available</li>
                        <li>Your claim will be reviewed by Coordinator, then Manager</li>
                    </ul>
                </div>
            </div>

            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Approval Process</h5>
                    <ol class="small mb-0">
                        <li>Submit your claim</li>
                        <li>Coordinator reviews and approves</li>
                        <li>Manager provides final approval</li>
                        <li>Payment processed</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            // Auto-calculate total amount
            function calculateTotal() {
                var hours = parseFloat($('#hoursWorked').val()) || 0;
                var rate = parseFloat($('#hourlyRate').val()) || 0;
                var total = (hours * rate).toFixed(2);
                $('#totalAmount').val(total);

                if (total > 0) {
                    $('#totalAmount').removeClass('text-muted').addClass('text-success');
                } else {
                    $('#totalAmount').removeClass('text-success').addClass('text-muted');
                }
            }

            $('#hoursWorked, #hourlyRate').on('input change', function() {
                calculateTotal();
            });

            // File validation
            $('#fileInput').on('change', function() {
                var file = this.files[0];
                var fileValidation = $('#fileValidation');

                if (file) {
                    var maxSize = 10 * 1024 * 1024;
                    if (file.size > maxSize) {
                        fileValidation.text('File size exceeds 10MB. Please choose a smaller file.').show();
                        $(this).val('');
                        return;
                    }

                    var allowedExtensions = ['.pdf', '.doc', '.docx', '.xlsx'];
                    var fileName = file.name.toLowerCase();
                    var isValid = allowedExtensions.some(function(ext) {
                        return fileName.endsWith(ext);
                    });

                    if (!isValid) {
                        fileValidation.text('Invalid file type. Only PDF, DOC, DOCX, and XLSX files are allowed.').show();
                        $(this).val('');
                        return;
                    }

                    fileValidation.hide();
                } else {
                    fileValidation.hide();
                }
            });

            // Form submission
            $('#claimForm').on('submit', function(e) {
                var hours = parseFloat($('#hoursWorked').val());
                var rate = parseFloat($('#hourlyRate').val());

                if (hours <= 0 || rate <= 0) {
                    e.preventDefault();
                    alert('Please enter valid hours worked and hourly rate.');
                    return false;
                }

                $('#submitBtn').prop('disabled', true).html('<i class="bi bi-hourglass-split"></i> Submitting...');
            });

            calculateTotal();
        });
    </script>
}