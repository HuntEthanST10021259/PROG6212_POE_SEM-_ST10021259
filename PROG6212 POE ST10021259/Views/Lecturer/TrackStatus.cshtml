@model List<PROG6212_POE_ST10021259.Models.Claim>
@{
    ViewData["Title"] = "Track Claim Status";
}

<div class="container mt-4">
    <h2 class="mb-4">My Claims</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <h5>No claims submitted yet</h5>
            <p>You haven't submitted any claims. Click the button below to submit your first claim.</p>
            <a asp-action="SubmitClaim" class="btn btn-primary">Submit New Claim</a>
        </div>
    }
    else
    {
        <div class="mb-3">
            <a asp-action="SubmitClaim" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Submit New Claim
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Claim ID</th>
                        <th>Date Submitted</th>
                        <th>Hours Worked</th>
                        <th>Hourly Rate</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Supporting Document</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model.OrderByDescending(c => c.DateSubmitted))
                    {
                        <tr>
                            <td><strong>#@claim.Id</strong></td>
                            <td>@claim.DateSubmitted.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@claim.HoursWorked hrs</td>
                            <td>R @claim.HourlyRate.ToString("F2")</td>
                            <td><strong>R @claim.TotalAmount.ToString("F2")</strong></td>
                            <td>
                                @if (claim.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-clock"></i> Pending Coordinator
                                    </span>
                                }
                                else if (claim.Status == "CoordinatorApproved")
                                {
                                    <span class="badge bg-info">
                                        <i class="bi bi-check"></i> Pending Manager
                                    </span>
                                }
                                else if (claim.Status == "Approved")
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Approved
                                    </span>
                                }
                                else if (claim.Status == "Rejected")
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-x-circle"></i> Rejected
                                    </span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(claim.SupportingDocument))
                                {
                                    <a href="~/uploads/@claim.SupportingDocument" target="_blank" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-file-earmark"></i> View
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">None</span>
                                }
                            </td>
                            <td>
                                <button type="button" class="btn btn-sm btn-outline-info" data-bs-toggle="modal" data-bs-target="#detailsModal@(claim.Id)">
                                    <i class="bi bi-info-circle"></i> View Timeline
                                </button>
                            </td>
                        </tr>

                        <!-- Modal for each claim -->
                        <div class="modal fade" id="detailsModal@(claim.Id)" tabindex="-1">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Claim #@claim.Id - Approval Timeline</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <strong>Hours Worked:</strong> @claim.HoursWorked hrs
                                            </div>
                                            <div class="col-md-6">
                                                <strong>Hourly Rate:</strong> R @claim.HourlyRate.ToString("F2")
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-12">
                                                <strong>Total Amount:</strong> <span class="text-success fs-5">R @claim.TotalAmount.ToString("F2")</span>
                                            </div>
                                        </div>

                                        @if (!string.IsNullOrEmpty(claim.Notes))
                                        {
                                            <div class="mb-3">
                                                <strong>Notes:</strong>
                                                <p class="border p-2 bg-light">@claim.Notes</p>
                                            </div>
                                        }

                                        <hr />
                                        <h6 class="mb-3">Approval Timeline</h6>

                                        <div class="timeline">
                                            <div class="timeline-item">
                                                <div class="timeline-marker bg-primary"></div>
                                                <div class="timeline-content">
                                                    <h6 class="mb-0">Claim Submitted</h6>
                                                    <small class="text-muted">@claim.DateSubmitted.ToString("dd/MM/yyyy HH:mm")</small>
                                                </div>
                                            </div>

                                            @if (claim.CoordinatorApprovedDate.HasValue)
                                            {
                                                <div class="timeline-item">
                                                    <div class="timeline-marker bg-success"></div>
                                                    <div class="timeline-content">
                                                        <h6 class="mb-0">Coordinator Approved</h6>
                                                        <small class="text-muted">
                                                            By: @claim.CoordinatorApprovedBy<br />
                                                            @claim.CoordinatorApprovedDate?.ToString("dd/MM/yyyy HH:mm")
                                                        </small>
                                                    </div>
                                                </div>
                                            }
                                            else if (claim.Status == "Pending")
                                            {
                                                <div class="timeline-item">
                                                    <div class="timeline-marker bg-warning"></div>
                                                    <div class="timeline-content">
                                                        <h6 class="mb-0">Awaiting Coordinator Review</h6>
                                                        <small class="text-muted">In progress...</small>
                                                    </div>
                                                </div>
                                            }

                                            @if (claim.ManagerApprovedDate.HasValue)
                                            {
                                                <div class="timeline-item">
                                                    <div class="timeline-marker bg-success"></div>
                                                    <div class="timeline-content">
                                                        <h6 class="mb-0">Manager Approved (Final)</h6>
                                                        <small class="text-muted">
                                                            By: @claim.ManagerApprovedBy<br />
                                                            @claim.ManagerApprovedDate?.ToString("dd/MM/yyyy HH:mm")
                                                        </small>
                                                        <div class="alert alert-success mt-2 mb-0">
                                                            <i class="bi bi-check-circle"></i> Payment will be processed
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            else if (claim.Status == "CoordinatorApproved")
                                            {
                                                <div class="timeline-item">
                                                    <div class="timeline-marker bg-info"></div>
                                                    <div class="timeline-content">
                                                        <h6 class="mb-0">Awaiting Manager Approval</h6>
                                                        <small class="text-muted">Final review in progress...</small>
                                                    </div>
                                                </div>
                                            }

                                            @if (claim.Status == "Rejected")
                                            {
                                                <div class="timeline-item">
                                                    <div class="timeline-marker bg-danger"></div>
                                                    <div class="timeline-content">
                                                        <h6 class="mb-0">Claim Rejected</h6>
                                                        <small class="text-muted">
                                                            By: @claim.RejectedBy<br />
                                                            @claim.RejectedDate?.ToString("dd/MM/yyyy HH:mm")
                                                        </small>
                                                        @if (!string.IsNullOrEmpty(claim.RejectionReason))
                                                        {
                                                            <div class="alert alert-danger mt-2 mb-0">
                                                                <strong>Reason:</strong> @claim.RejectionReason
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 40px;
    }

    .timeline-item {
        position: relative;
        padding-bottom: 20px;
    }

        .timeline-item:before {
            content: '';
            position: absolute;
            left: -29px;
            top: 10px;
            width: 2px;
            height: 100%;
            background: #dee2e6;
        }

        .timeline-item:last-child:before {
            display: none;
        }

    .timeline-marker {
        position: absolute;
        left: -36px;
        top: 0;
        width: 16px;
        height: 16px;
        border-radius: 50%;
        border: 3px solid #fff;
        box-shadow: 0 0 0 2px #dee2e6;
    }

    .timeline-content {
        padding: 5px 0;
    }
</style>