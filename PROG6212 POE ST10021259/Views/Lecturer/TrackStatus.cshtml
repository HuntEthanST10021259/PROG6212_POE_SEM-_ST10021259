@model List<PROG6212_POE_ST10021259.Models.Claim>
@{
    ViewData["Title"] = "Track Claim Status";
}

<div class="container mt-4">
    <h2 class="mb-4">My Claims</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <h5>No claims submitted yet</h5>
            <p>You haven't submitted any claims. Click the button below to submit your first claim.</p>
            <a asp-action="SubmitClaim" class="btn btn-primary">Submit New Claim</a>
        </div>
    }
    else
    {
        <div class="mb-3">
            <a asp-action="SubmitClaim" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Submit New Claim
            </a>
        </div>

        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-center border-warning">
                    <div class="card-body">
                        <h6 class="text-muted">Pending</h6>
                        <h2 class="text-warning">@Model.Count(c => c.Status == "Pending")</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-info">
                    <div class="card-body">
                        <h6 class="text-muted">Coordinator Approved</h6>
                        <h2 class="text-info">@Model.Count(c => c.Status == "Approved")</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-success">
                    <div class="card-body">
                        <h6 class="text-muted">Final Approved</h6>
                        <h2 class="text-success">@Model.Count(c => c.Status == "FinalApproved")</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-danger">
                    <div class="card-body">
                        <h6 class="text-muted">Rejected</h6>
                        <h2 class="text-danger">@Model.Count(c => c.Status == "Rejected")</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Claim ID</th>
                        <th>Date Submitted</th>
                        <th>Hours Worked</th>
                        <th>Hourly Rate</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Supporting Document</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model.OrderByDescending(c => c.DateSubmitted))
                    {
                        <tr>
                            <td><strong>#@claim.Id</strong></td>
                            <td>@claim.DateSubmitted.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@claim.HoursWorked hrs</td>
                            <td>R @claim.HourlyRate.ToString("F2")</td>
                            <td><strong>R @claim.TotalAmount.ToString("F2")</strong></td>
                            <td>
                                @if (claim.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-clock-history"></i> Pending Review
                                    </span>
                                    <br>

                                    <small class="text-muted">Awaiting coordinator</small>
                                }
                                else if (claim.Status == "Approved")
                                {
                                    <span class="badge bg-info">
                                        <i class="bi bi-check-circle"></i> Coordinator Approved
                                    </span>
                                    <br>

                                    <small class="text-muted">Awaiting manager</small>
                                }
                                else if (claim.Status == "FinalApproved")
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle-fill"></i> Final Approved
                                    </span>
                                    <br>

                                    <small class="text-muted">Payment authorized</small>
                                }
                                else if (claim.Status == "Rejected")
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-x-circle"></i> Rejected
                                    </span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(claim.SupportingDocument))
                                {
                                    <a href="~/uploads/@claim.SupportingDocument" target="_blank" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-file-earmark"></i> View
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">None</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Status Legend -->
        <div class="card mt-4 bg-light">
            <div class="card-body">
                <h5 class="card-title">Status Guide</h5>
                <div class="row">
                    <div class="col-md-6">
                        <ul class="list-unstyled">
                            <li><span class="badge bg-warning text-dark">Pending Review</span> - Submitted and awaiting Program Coordinator review</li>
                            <li><span class="badge bg-info">Coordinator Approved</span> - Approved by coordinator, awaiting Manager's final approval</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <ul class="list-unstyled">
                            <li><span class="badge bg-success">Final Approved</span> - Approved by Manager, payment will be processed</li>
                            <li><span class="badge bg-danger">Rejected</span> - Claim was rejected, no payment will be made</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div>