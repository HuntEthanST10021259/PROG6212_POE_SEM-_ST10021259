@model List<PROG6212_POE_ST10021259.Models.Claim>
@{
    ViewData["Title"] = "Manager Dashboard";
    var stats = ViewBag.Statistics as Dictionary<string, int>;
}

<div class="container-fluid mt-4">
    <h2 class="mb-4">
        <i class="bi bi-speedometer2"></i> Manager Dashboard
    </h2>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-file-earmark-text"></i> Total Claims
                    </h5>
                    <h2 class="mb-0">@(stats != null ? stats["Total"] : 0)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-clock-history"></i> Pending Coordinator
                    </h5>
                    <h2 class="mb-0">@(stats != null ? stats["Pending"] : 0)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-hourglass-split"></i> Awaiting Manager
                    </h5>
                    <h2 class="mb-0">@(stats != null ? stats["CoordinatorApproved"] : 0)</h2>
                    <a href="@Url.Action("ReviewClaims")" class="btn btn-light btn-sm mt-2">
                        Review Now <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-check-circle"></i> Approved
                    </h5>
                    <h2 class="mb-0">@(stats != null ? stats["Approved"] : 0)</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <a href="@Url.Action("ReviewClaims")" class="btn btn-primary btn-lg me-2">
                        <i class="bi bi-clipboard-check"></i> Review Pending Claims
                    </a>
                    <button class="btn btn-outline-secondary btn-lg" onclick="window.print()">
                        <i class="bi bi-printer"></i> Print Dashboard
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Recent Claims (Last 10)</h5>
        </div>
        <div class="card-body">
            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info">
                    No claims have been submitted yet.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Submitted</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th>Coordinator</th>
                                <th>Manager</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td><strong>#@claim.Id</strong></td>
                                    <td>@claim.DateSubmitted.ToString("dd/MM/yyyy")</td>
                                    <td>@claim.HoursWorked hrs</td>
                                    <td>R @claim.HourlyRate.ToString("F2")</td>
                                    <td><strong>R @claim.TotalAmount.ToString("F2")</strong></td>
                                    <td>
                                        @if (claim.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                        else if (claim.Status == "CoordinatorApproved")
                                        {
                                            <span class="badge bg-info">Awaiting Manager</span>
                                        }
                                        else if (claim.Status == "Approved")
                                        {
                                            <span class="badge bg-success">Approved</span>
                                        }
                                        else if (claim.Status == "Rejected")
                                        {
                                            <span class="badge bg-danger">Rejected</span>
                                        }
                                    </td>
                                    <td>
                                        @if (claim.CoordinatorApprovedDate.HasValue)
                                        {
                                            <i class="bi bi-check-circle text-success"></i>
                                            <small>@claim.CoordinatorApprovedDate?.ToString("dd/MM")</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (claim.ManagerApprovedDate.HasValue)
                                        {
                                            <i class="bi bi-check-circle text-success"></i>
                                            <small>@claim.ManagerApprovedDate?.ToString("dd/MM")</small>
                                        }
                                        else if (claim.Status == "CoordinatorApproved")
                                        {
                                            <a href="@Url.Action("ReviewClaims")" class="btn btn-sm btn-primary">Review</a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<style>
    @@media print {
        .btn, .card-header {
            display: none;
        }
    }
</style>