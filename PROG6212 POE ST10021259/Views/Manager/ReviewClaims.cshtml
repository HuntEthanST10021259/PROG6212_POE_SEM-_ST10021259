@model List<PROG6212_POE_ST10021259.Models.Claim>
@{
    ViewData["Title"] = "Manager Review";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="bi bi-shield-check"></i> Final Claim Review (Manager)
    </h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">
            <h5><i class="bi bi-info-circle"></i> No Claims Pending Manager Review</h5>
            <p>There are currently no claims awaiting final manager approval.</p>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> <strong>@Model.Count</strong> claim(s) pending final approval
        </div>

        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Claim ID</th>
                        <th>Submitted</th>
                        <th>Hours</th>
                        <th>Rate</th>
                        <th>Total</th>
                        <th>Validation</th>
                        <th>Notes</th>
                        <th>Document</th>
                        <th>Coordinator</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model.OrderBy(c => c.CoordinatorApprovedDate))
                    {
                        <tr>
                            <td><strong>#@claim.Id</strong></td>
                            <td>@claim.DateSubmitted.ToString("dd/MM/yyyy")</td>
                            <td>@claim.HoursWorked hrs</td>
                            <td>R @claim.HourlyRate.ToString("F2")</td>
                            <td><strong class="text-success">R @claim.TotalAmount.ToString("F2")</strong></td>
                            <td>
                                <button type="button" class="btn btn-sm btn-outline-info" onclick="validateClaim(@claim.Id, @claim.HoursWorked, @claim.HourlyRate, @claim.TotalAmount, '@(claim.SupportingDocument ?? "")')">
                                    <i class="bi bi-check2-square"></i> Validate
                                </button>
                                <div id="validation-@claim.Id" class="mt-2" style="display:none;"></div>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(claim.Notes))
                                {
                                    <span>@claim.Notes</span>
                                }
                                else
                                {
                                    <span class="text-muted">None</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(claim.SupportingDocument))
                                {
                                    <a href="~/uploads/@claim.SupportingDocument" target="_blank" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-file-earmark-pdf"></i> View
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">None</span>
                                }
                            </td>
                            <td>
                                <small>
                                    <i class="bi bi-check-circle text-success"></i><br>
                                    @claim.CoordinatorApprovedBy<br>
                                    @claim.CoordinatorApprovedDate?.ToString("dd/MM HH:mm")
                                </small>
                            </td>
                            <td>
                                <div class="btn-group-vertical" role="group">
                                    <form asp-action="Approve" method="post" onsubmit="return confirm('Final approve Claim #@claim.Id? Payment will be processed.');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@claim.Id" />
                                        <button type="submit" class="btn btn-success btn-sm">
                                            <i class="bi bi-check-circle"></i> Approve
                                        </button>
                                    </form>
                                    <button type="button" class="btn btn-danger btn-sm mt-1" data-bs-toggle="modal" data-bs-target="#rejectModal@(claim.Id)">
                                        <i class="bi bi-x-circle"></i> Reject
                                    </button>
                                </div>
                            </td>
                        </tr>

                        <!-- Reject Modal -->
                        <div class="modal fade" id="rejectModal@(claim.Id)" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header bg-danger text-white">
                                        <h5 class="modal-title">Reject Claim #@claim.Id</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <form asp-action="Reject" method="post">
                                        <div class="modal-body">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@claim.Id" />
                                            <div class="mb-3">
                                                <label for="reason" class="form-label">Reason for Rejection:</label>
                                                <textarea name="reason" class="form-control" rows="3" required></textarea>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-danger">Confirm Rejection</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-primary">
            <i class="bi bi-speedometer2"></i> Dashboard
        </a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Home
        </a>
    </div>
</div>

<script>
    function validateClaim(claimId, hours, rate, total, document) {
        const validationDiv = document.getElementById('validation-' + claimId);
        const minHours = 0.01;
        const maxHours = 744;
        const minRate = 100.00;
        const maxRate = 2000.00;
        const maxTotal = 100000.00;
        const docThreshold = 50000.00;

        let warnings = [];
        let errors = [];

        if (hours < minHours || hours > maxHours) {
            errors.push('Hours outside range');
        }
        if (rate < minRate) warnings.push('Low hourly rate');
        if (rate > maxRate) warnings.push('High hourly rate');
        if (total > maxTotal) warnings.push('Exceeds max amount');
        if (total > docThreshold && !document) warnings.push('Missing required document');
        if (hours > 160) warnings.push('Exceeds typical hours');

        let html = '<div class="small">';

        if (errors.length > 0) {
            html += '<div class="alert alert-danger py-1 mb-0">';
            html += '<strong>Issues:</strong> ' + errors.join(', ');
            html += '</div>';
        } else if (warnings.length > 0) {
            html += '<div class="alert alert-warning py-1 mb-0">';
            html += '<strong>Warnings:</strong> ' + warnings.join(', ');
            html += '</div>';
        } else {
            html += '<div class="alert alert-success py-1 mb-0">';
            html += '<i class="bi bi-check-circle"></i> All checks passed';
            html += '</div>';
        }

        html += '</div>';
        validationDiv.innerHTML = html;
        validationDiv.style.display = 'block';
    }
</script>