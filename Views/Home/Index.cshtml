@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Contract Monthly Claim System</h1>
    <p class="lead">Welcome to the Contract Monthly Claim System for Independent Contractors</p>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">Submit Claims</h5>
                <p class="card-text">Lecturers can submit their monthly claims quickly and easily.</p>
                <a href="@Url.Action("SubmitClaim", "Lecturer")" class="btn btn-primary">Submit Claim</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">Track Status</h5>
                <p class="card-text">Monitor your claim status transparently until settlement.</p>
                <a href="@Url.Action("TrackStatus", "Lecturer")" class="btn btn-success">Track Claims</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title">Verify Claims</h5>
                <p class="card-text">Program coordinators and managers can verify and approve claims.</p>
                <a href="@Url.Action("VerifyClaims", "Management")" class="btn btn-warning">Verify Claims</a>
            </div>
        </div>
    </div>
</div>