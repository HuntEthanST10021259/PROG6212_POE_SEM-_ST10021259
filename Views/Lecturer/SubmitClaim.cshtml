@{
    ViewData["Title"] = "Submit Monthly Claim";
}

<h2>Submit Monthly Claim</h2>

<div class="row">
    <div class="col-md-8">
        <form class="card p-4 shadow-sm">
            <div class="mb-3">
                <label class="form-label">Hours Worked</label>
                <input type="number" class="form-control" placeholder="Enter hours worked" />
            </div>

            <div class="mb-3">
                <label class="form-label">Hourly Rate</label>
                <input type="number" class="form-control" placeholder="Enter hourly rate" />
            </div>

            <div class="mb-3">
                <label class="form-label">Additional Notes</label>
                <textarea class="form-control" rows="3" placeholder="Enter notes..."></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Upload Supporting Documents</label>
                <input type="file" class="form-control" accept=".pdf,.doc,.docx,.xlsx" />
                <div class="form-text">Accepted formats: PDF, DOC, XLSX</div>
            </div>

            <button type="button" class="btn btn-success">Submit Claim</button>
        </form>
    </div>
</div>