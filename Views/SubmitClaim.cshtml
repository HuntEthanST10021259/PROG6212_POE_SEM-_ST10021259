@{
    ViewBag.Title = "Submit Claim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Submit Monthly Claim</h2>

<form class="card p-4 shadow-sm">
    <div class="mb-3">
        <label for="hoursWorked" class="form-label">Hours Worked</label>
        <input type="number" class="form-control" id="hoursWorked" placeholder="Enter hours worked" />
    </div>

    <div class="mb-3">
        <label for="hourlyRate" class="form-label">Hourly Rate</label>
        <input type="number" class="form-control" id="hourlyRate" placeholder="Enter hourly rate" />
    </div>

    <div class="mb-3">
        <label for="notes" class="form-label">Additional Notes</label>
        <textarea class="form-control" id="notes" rows="3" placeholder="Enter notes..."></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Upload Supporting Documents</label>
        <input type="file" class="form-control" accept=".pdf,.docx,.xlsx" />
        <small class="text-muted">Accepted formats: PDF, DOCX, XLSX</small>
    </div>

    <button type="button" class="btn btn-success mt-2">Submit Claim</button>
</form>
